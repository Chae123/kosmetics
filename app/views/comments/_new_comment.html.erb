<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build]) do |f| %>
			<%= f.label :body, "Comments" %>
			<%= f.text_area :body, class: "form-control" %>

			<%= f.label :rating %>
			<%= f.text_field :rating, class: "rating" %><br>

			<br><%= f.submit "Submit", class: "btn btn-default" %>
	<% end %>
<% end %>