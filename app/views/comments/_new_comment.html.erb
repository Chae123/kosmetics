<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
			<%= f.label :body, "Comments" %>
			<%= f.text_area :body, class: "form-control" %>
	    <div class="rating"></div>
			<br><%= f.submit "Submit", class: "btn btn-default" %>
	<% end %>
<% end %>