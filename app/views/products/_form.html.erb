<%= form_for(product) do |f| %>
	<% if product.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

			<ul>
			<% product.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :brand %>
		<%= f.text_field :brand, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :category_id %>
		<%= f.select :category_id, Category.all.collect{|u| [u.name, u.id]} %>
	</div>

	<div class="field">
		<%= f.label :price_in_cents %>
		<%= f.text_field :price_in_cents, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :size %>
		<%= f.text_field :size, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control"%>
	</div>

	<div class="field">
		<%= f.label :how_to %>
		<%= f.text_field :how_to, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :ingredients %>
		<%= f.text_field :ingredients, class: "form-control" %>
	</div>

	<div class="field">
		<%= f.label :image_url %>
		<%= f.text_field :image_url, class: "form-control" %>
	</div>

	<div class="actions">
		<%= f.submit class: "btn btn-default" %>
	</div>
<% end %>
